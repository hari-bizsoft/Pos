<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/bill_id"
        android:background="@color/colorPrimaryDark"

        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="0"
        android:gravity="right"
        android:textStyle="bold"
        android:padding="5dp"
        android:textColor="#fff"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0"/>

    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="date"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold"
        android:layout_marginEnd="1dp"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/grand_total"/>

    <TextView
        android:id="@+id/grand_total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="100"
        android:textStyle="bold"
        android:textColor="#57ad3d"
        android:layout_marginEnd="1dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/bill_id"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/items_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Items"
        android:textColor="#000"
        android:textStyle="bold"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/user"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/item_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="7dp"
        android:text="20"
        android:padding="2dp"
        android:background="@color/colorPrimaryDark"
        android:textColor="#fff"
        app:layout_constraintLeft_toRightOf="@+id/items_text"
        app:layout_constraintTop_toTopOf="@+id/items_text"
        android:layout_marginStart="7dp"/>

    <ImageView
        android:id="@+id/imageView23"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/ic_menu_my_calendar"
        app:layout_constraintRight_toLeftOf="@+id/date"
        android:layout_marginRight="11dp"
        app:layout_constraintTop_toTopOf="@+id/date"
        android:layout_marginEnd="11dp"/>

    <ImageView
        android:id="@+id/imageView24"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toLeftOf="@+id/grand_total"
        app:layout_constraintTop_toTopOf="@+id/grand_total"
        app:srcCompat="@drawable/ic_attach_money_black_24dp"
        android:layout_marginEnd="8dp"/>

    <TextView
        android:id="@+id/user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User "
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@+id/imageView25"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toTopOf="@+id/imageView25"
        android:layout_marginStart="10dp"/>

    <ImageView
        android:id="@+id/imageView25"
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:srcCompat="@drawable/user"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/bill_id"/>
</android.support.constraint.ConstraintLayout>