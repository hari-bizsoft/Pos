<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="3dp"
     android:background="@drawable/bg_card">

    <ImageView
        android:id="@+id/os_images"
        android:padding="2dp"
        android:foregroundGravity="center"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@mipmap/ic_launcher"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:padding="2dp"

        android:textColor="@color/colorPrimaryDark"
        android:layout_below="@+id/os_images"
        android:id="@+id/sub_category_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sub Category"
        android:textAlignment="center"
        android:textSize="18dp"
        android:textStyle="bold"/>
    <ImageView
        android:padding="2dp"
        android:background="@drawable/groceries"

        android:textColor="@color/colorPrimaryDark"
        android:layout_below="@+id/sub_category_text"
        android:id="@+id/items_image"
        android:layout_width="30dp"
        android:layout_margin="2dp"
        android:layout_height="30dp"
        android:text="Sub Category"
        android:textAlignment="center"
        android:textSize="18dp"
        android:textStyle="bold"/>
    <TextView
        android:padding="2dp"
        android:background="@color/colorAccent"
        android:textColor="#fff"
        android:id="@+id/os_texts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="This is Just Dummy Text"
        android:textAlignment="center"
        android:textSize="18dp"
        android:textStyle="bold"
        android:layout_below="@+id/items_image"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/item_size"
        android:textColor="#000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/os_texts"
        android:layout_below="@+id/sub_category_text"
        android:layout_toEndOf="@+id/items_image"
        android:layout_toRightOf="@+id/items_image"
        android:gravity="center"
        android:text="TextView"
        android:textStyle="bold"/>

</RelativeLayout>