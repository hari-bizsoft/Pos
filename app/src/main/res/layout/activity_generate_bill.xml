            android:textColor="#000"
            android:text="Payment mode "
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/purchase_id_text"
            android:layout_marginStart="16dp"/>

        <TextView
            android:id="@+id/discount_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="8dp"

            android:text="0"
            android:textColor="@color/red_700"
            android:textStyle="italic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/gst" />

        <TextView
            android:id="@+id/discount_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:text="Discount RM"
            android:textColor="#000"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/gst_text"
            app:layout_constraintRight_toLeftOf="@+id/discount_value"
            app:layout_constraintTop_toBottomOf="@+id/gst_text" />

    </android.support.constraint.ConstraintLayout>
</ScrollView>
