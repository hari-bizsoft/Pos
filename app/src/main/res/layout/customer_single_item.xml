<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <ImageView
        android:id="@+id/customer_image"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
       />

    <TextView
        android:id="@+id/customer_fname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintLeft_toRightOf="@+id/imageView18"
        android:layout_marginLeft="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/customer_lname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:text="TextView"
        app:layout_constraintLeft_toRightOf="@+id/customer_fname"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/credit_points"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:text="0"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/contact_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" Contact Number"
        app:layout_constraintLeft_toRightOf="@+id/imageView19"
        android:layout_marginLeft="8dp"
        app:layout_constraintTop_toTopOf="@+id/imageView19"
        android:layout_marginTop="0dp"/>

    <TextView
        android:id="@+id/customer_mail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="a@a.com"
        app:layout_constraintLeft_toRightOf="@+id/imageView20"
        android:layout_marginLeft="8dp"
        app:layout_constraintTop_toTopOf="@+id/imageView20"
        android:layout_marginTop="3dp"/>

    <TextView
        android:id="@+id/cart_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:text="0"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/contact_number"/>

    <ImageView
        android:id="@+id/imageView16"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginRight="9dp"
        android:layout_marginTop="8dp"
        app:layout_constraintRight_toLeftOf="@+id/credit_points"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/btn_star_big_on"/>

    <ImageView
        android:id="@+id/imageView17"
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:srcCompat="@drawable/ic_shopping_cart_black_24dp"
        app:layout_constraintRight_toLeftOf="@+id/cart_size"
        android:layout_marginRight="9dp"
        app:layout_constraintTop_toTopOf="@+id/customer_mail"
        android:layout_marginTop="-1dp"/>

    <ImageView
        android:id="@+id/imageView18"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="0dp"
        android:background="@drawable/id"
        app:layout_constraintLeft_toRightOf="@+id/customer_image"
        app:layout_constraintTop_toTopOf="@+id/customer_image"/>

    <ImageView
        android:id="@+id/imageView19"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="7dp"
        app:layout_constraintLeft_toRightOf="@+id/customer_image"
        app:layout_constraintTop_toBottomOf="@+id/imageView18"
        app:srcCompat="@drawable/phonebook"/>

    <ImageView
        android:id="@+id/imageView20"
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:srcCompat="@drawable/email"
        android:layout_marginTop="3dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView19"
        app:layout_constraintLeft_toRightOf="@+id/customer_image"
        android:layout_marginLeft="8dp"/>
</android.support.constraint.ConstraintLayout>